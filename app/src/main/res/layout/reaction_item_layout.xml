<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    cardview:cardCornerRadius="10dp"
    cardview:cardElevation="1dp"
    cardview:cardUseCompatPadding="true"
    android:id="@+id/reaction_card_view"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="22sp"
            tools:text= "Test Reaction"
            android:id="@+id/tw_reaction_item_title"
            android:clickable="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iw_number_likes"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="right"
                android:src="@drawable/like"
                android:clickable="true"

                />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:id="@+id/tw_likes_count"
                tools:textSize="25sp"
                tools:text="12"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"

                />

            <ImageView
                android:id="@+id/iw_number_dislikes"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="end"
                android:src="@drawable/dislike"
                android:clickable="true"
                />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:id="@+id/tw_dislike_count"
                tools:textSize="25sp"
                tools:text="5"
                android:gravity="center"
                android:textStyle="bold"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:id="@+id/btn_share_reaction"
                android:text="Share"

                />

        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>